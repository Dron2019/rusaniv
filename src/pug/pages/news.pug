extends ../layout/main
block variable
    -pageName = 'news';
block meta
    title= '= NEWS = Rusaniv Residence '
    meta(name='description', content='')
block head
        link(rel='stylesheet', href="./assets/styles/main.min.css")
block scripts
    script(defer src='./assets/scripts/libs.js')
    script(defer src='./assets/scripts/index.js')
    script(defer src='./assets/scripts/news.js')
block content
    .wrapper.first
        .breadcrumbs-wrapper
            .breadcrumbs-block
                h1.page-title NEWS
                a(href="/").link Головна
                a(href="/").link.current-link Новини
        .news-navigation-block
            +SelectBox('month', [
                {name: 'Січень',value: '1'}, 
                {name: 'Лютий',value: '2'}, 
                {name: 'Березень',value: '3'}, 
                {name: 'Квітень', value: '4'}, 
                {name: 'Травень',value: '5'},
                {name: 'Червень',value: '6'},
                {name: 'Липень',value: '7'},
                {name: 'Серпень',value: '8'},
                {name: 'Вересень',value: '9'},
                {name: 'Жовтень',value: '10'},
                {name: 'Листопад',value: '11'},
                {name: 'Грудень',value: '12'},
                ]).select-box
            ul.years-slider.years-slider-js
                li(data-value="2019").active 2019
                li(data-value="2020") 2020
                li(data-value="2021") 2021
                li(data-value="2022") 2022
                li(data-value="2023") 2023
            .years-arrows
                .prev
